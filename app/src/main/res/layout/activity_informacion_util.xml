<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/colorPeach">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Información Útil"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Esta aplicación está diseñada para agilizar el proceso de citas médicas, tanto para pacientes como para profesionales de la salud. Los titulares pueden agendar citas y ver su historial, mientras que los médicos pueden gestionar pacientes, realizar cálculos médicos y administrar citas."
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Desarrollado como parte del programa Técnico Superior Universitario en la UTL."
        android:textSize="14sp"
        android:textAlignment="center"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regresar"
        android:layout_gravity="center"
        android:backgroundTint="@color/colorPrimary"/>
</LinearLayout>