<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seguridad"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!-- Cambiar contraseña -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cambiar contraseña"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/etContraseniaActual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contraseña actual"
            android:inputType="textPassword"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/etNuevaContrasenia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nueva contraseña"
            android:inputType="textPassword"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/etConfirmarContrasenia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirmar nueva contraseña"
            android:inputType="textPassword"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btnCambiarContrasenia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cambiar contraseña"
            android:layout_marginTop="8dp"/>

        <!-- Autenticación de dos factores -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Autenticación de dos factores"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <Switch
            android:id="@+id/switchAutenticacionDosFactores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Habilitar autenticación de dos factores"
            android:layout_marginTop="8dp"/>

        <!-- Historial de sesiones -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Historial de sesiones"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/btnVerSesiones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver sesiones recientes"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
</ScrollView>