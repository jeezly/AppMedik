<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CalculadoraDosificadora"
        tools:targetApi="31">

        <!-- Actividad Principal (Login) -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Actividades de Vista Médico -->
        <activity
            android:name=".VistaMedico.Menu.PrincipalActivity"
            android:exported="true" />
        <activity
            android:name=".VistaMedico.VistaMedico"
            android:exported="true" />
        <activity
            android:name=".VistaMedico.CuentaNueva.CrearCuentaMedico"
            android:exported="true" />
        <activity
            android:name=".VistaMedico.CuentaNueva.CrearMedicoDos"
            android:exported="true" />

        <!-- Actividades de Citas (Vista Médico) -->
        <activity
            android:name=".VistaMedico.Acciones.AgendaActivity"
            android:exported="true" />
        <activity
            android:name=".VistaMedico.Acciones.AgregarCitaActivity"
            android:exported="true" />
        <activity
            android:name=".VistaMedico.Acciones.DetallesCitaActivity"
            android:exported="true" />

        <!-- Actividades de Vista Titular -->
        <activity
            android:name=".VistaTitular.VistaTitular"
            android:exported="true" />
        <activity
            android:name=".VistaTitular.AgendarCitasActivity"
            android:exported="true" />
        <activity
            android:name=".VistaTitular.AgendarCitasDosActivity"
            android:exported="true" />
        <activity
            android:name=".VistaTitular.CuentaNueva.CuentaNueva"
            android:exported="true" />
        <activity
            android:name=".VistaTitular.CuentaNueva.CrearCuentaTitular"
            android:exported="true" />
        <activity
            android:name=".VistaTitular.CuentaNueva.CrearTitularDos"
            android:exported="true" />

        <!-- Otras Actividades -->
        <activity
            android:name=".BienvenidaActivity"
            android:exported="true" />

    </application>

</manifest>